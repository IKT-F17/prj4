    <Window.Resources>
        <ControlTemplate x:Key="ArcherTowerTemplate" TargetType="Button">
            <Grid>
                <Border Background="DarkGray" BorderThickness="2" BorderBrush="Black" Width="40" Height="40" >
                    <TextBlock Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">!</TextBlock>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Resources>

    <Canvas x:Name="Map" Background="LightGray">

        <!-- For Testing: Tick Timer-->

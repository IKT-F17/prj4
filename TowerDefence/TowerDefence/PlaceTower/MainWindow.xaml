            <!--<Rectangle x:Name="NewBlueTower" Fill="Blue" Width="40" Height="40" StrokeThickness="2" MouseDown="NewBlueTower_MouseDown" Panel.ZIndex="1"/>-->
        </StackPanel>

        <!-- Tower Placement 1 -->
        <Rectangle x:Name="TowerPlacement1" Panel.ZIndex="99" Fill="DarkGray" Width="40" Height="40" Canvas.Left="184" Canvas.Top="80" MouseDown="TowerPlacement1_OnMouseDown"/>
        <Rectangle x:Name="NewRedTowerPlacement1" Visibility="Collapsed" Panel.ZIndex="98" Fill="Red" Width="40" Height="40" StrokeThickness="2" Canvas.Left="184" Canvas.Top="80" MouseEnter="NewRedTowerPlacement1_OnMouseEnter" MouseLeave="NewRedTowerPlacement1_OnMouseLeave"/>
        <Ellipse x:Name="NewRedTowerCoverAreaPlacement1" Visibility="Collapsed" Panel.ZIndex="97" Width="120" Height="120" Canvas.Left="144" Canvas.Top="40" Stroke="#3F000000" Fill="#260000FF" />


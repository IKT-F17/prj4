        <!--<Button x:Name="NewArcherTower" Template="{StaticResource ArcherTowerTemplate}" Canvas.Left="65" Canvas.Top="402" />-->

        <!-- Select Towers "Toolbox" -->
        <StackPanel Orientation="Horizontal" Canvas.Left="10" Canvas.Top="402" >
            <Rectangle x:Name="NewRedTower" Fill="Red" Width="40" Height="40" StrokeThickness="2" MouseDown="NewRedTower_MouseDown" Panel.ZIndex="1"/>
